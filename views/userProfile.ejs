<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>I-Blogify</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3 mb-3">
      <div
        class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 justify-content-center"
      >
        <div class="col">
          <div class="card h-100" style="width: 400px; height: 300px">
            <!-- Increase both width and height of the card -->
            <% if (locals.user && locals.user.profileImageURL) { %>
            <img
              src="<%= locals.user.profileImageURL %>"
              class="card-img-top"
              style="width: 100%; height: 60%; object-fit: cover"
            />
            <% } %>

            <div class="card-body">
              <% if (locals.user && locals.user.name) { %>
              <h5>Name : <%= locals.user.name %></h5>

              <% } %> <% if (locals.user && locals.user.email) { %>
              <h5>Email : <%= locals.user.email %></h5>

              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/scripts') %>
  </body>
</html>
